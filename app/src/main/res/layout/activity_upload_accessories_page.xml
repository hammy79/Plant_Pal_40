        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:orientation="horizontal"
            android:background="#000"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Product Accessories"
                android:typeface="serif"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:textColor="#FFFF"
                android:layout_marginStart="20dp"
                />
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="180dp"
            app:cardCornerRadius="15dp"
            android:layout_marginStart="20sp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/baseline_add_photo_alternate_24"
                android:scaleType="fitXY"
                android:id="@+id/accessoriesproductimageUplaod"
                />

        </androidx.cardview.widget.CardView>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp"
            android:layout_marginTop="15dp"
            app:startIconTint="#000"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Accessories Name"
                android:inputType="text"
                android:id="@+id/accessoriesuploadname"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
