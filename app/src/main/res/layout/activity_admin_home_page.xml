<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin_Home_Page"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Welcome Home Admin Home"
        android:textSize="24sp"
        android:textColor="#000"
        android:layout_marginStart="20sp"
        android:layout_marginTop="10dp"
        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20sp"
        >

        <com.google.android.material.button.MaterialButton
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20sp"
            android:text="Add Plant"
            android:textColor="#000"
            android:onClick="btaddproduct"
            />


        <com.google.android.material.button.MaterialButton
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20sp"
            android:text="Accessories Add Product"
            android:onClick="accessoriesaddprdt"
            android:textColor="#000"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20sp"
            >

            <com.google.android.material.button.MaterialButton
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20sp"
                android:text="Show Plant"
                android:textColor="#000"
                android:onClick="showproductadmin"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20sp"
            >

            <com.google.android.material.button.MaterialButton
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20sp"
                android:text="Show Accessories Product"
                android:textColor="#000"
                android:onClick="showproductaccessoriesadmin"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20sp"
            >

            <com.google.android.material.button.MaterialButton
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20sp"
                android:text="Admin Check User Details"
                android:textColor="#000"
                android:onClick="showcheckuserdetailadmin"/>
        </LinearLayout>



    </LinearLayout>

</LinearLayout>